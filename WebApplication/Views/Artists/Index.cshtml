@model IEnumerable<Domain.Entities.Artist>
@{
    ViewData["Title"] = "Artists";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Famous artists</h1>
        <p class="lead text-muted">
            "When you want to make the main color pure and bright, don’t just keep adding
            bright colors on it. Just make the colors around the spot darker and dull. It will give the scene
            dramatical effects. I think the life is the same.” Hiroko Sakai
        </p>

    </div>
</section>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => modelItem.Quote)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description.SmallDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description.BigDescription)
        </th>
    </tr>
    </thead>
    <tbody>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description.SmallDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description.BigDescription)
            </td>

        </tr>
    }
    </tbody>
</table>