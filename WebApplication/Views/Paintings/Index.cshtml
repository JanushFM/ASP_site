@model Domain.Entities.Artist
@{
    ViewData["Title"] = "Paintings";
}
<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">@Html.DisplayFor(model => model.Name) album</h1>
        <p class="lead text-muted">@Html.DisplayFor(model => model.Description.SmallDescription)</p>
    </div>
</section>

<form asp-action="BuyPainting">
    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row">
                @foreach (var item in Model.Paintings)
                {
                    <div class="col-md-4">

                        <div class="card mb-4 shadow-sm">
                            <img src="~/images/@Html.DisplayFor(modelItem => item.ImageName)"
                                 class="bd-placeholder-img card-img-top"
                                 width="100%" height="225" alt="">


                            <div class="card-body">
                                <p class="card-text">
                                    @Html.DisplayFor(modelItem => item.Description.SmallDescription)
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    @if (item.NumberAvailable > 0)
                                    {
                                        <div class="btn-group">
                                            <a href="~/images/@Html.DisplayFor(modelItem => item.ImageName)"
                                               class="btn btn-sm btn-outline-secondary">
                                                View
                                            </a>
                                            @* <input type="hidden" asp-route-id="@item.Id" /> *@
                                            @* <input type="submit" value="Buy"  class="btn btn-sm btn-outline-secondary" /> *@
                                            <button asp-action="BuyPainting" asp-route-id="@item.Id"
                                                    type="submit"
                                               class="btn btn-sm btn-outline-secondary">
                                                Buy
                                            </button>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="btn-group">
                                            <a href="~/images/@Html.DisplayFor(modelItem => item.ImageName)"
                                               class="btn btn-sm btn-outline-secondary">
                                                View
                                            </a>

                                            <button class="btn btn-sm btn-outline-secondary"
                                                    disabled>
                                                Buy
                                            </button>

                                        </div>
                                        <small class="text-muted">No longer available </small>
                                    }
                                    <small class="text-muted">@Html.DisplayFor(modelItem => item.Price) $ </small>
                                </div>
                            </div>
                        </div>

                    </div>
                }


            </div>
        </div>
    </div>
</form>