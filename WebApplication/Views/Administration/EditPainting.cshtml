@model Domain.Entities.Painting

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Movie</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPainting">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Description.BigDescription" class="control-label"></label>
                <textarea  asp-for="Description.BigDescription" maxlength="4000" style="height: 400px" class="input form-control">
                </textarea>
            </div>
            <div class="form-group">
                <label asp-for="Description.SmallDescription" class="control-label"></label>
                <textarea  asp-for="Description.SmallDescription" maxlength="600" style="height: 150px" class="input form-control">
                </textarea>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="NumberAvailable" class="control-label"></label>
                <input asp-for="NumberAvailable" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="ImageName" class="control-label"></label>
                <input asp-for="ImageName" class="form-control"/>
            </div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>