@model WebApplication.ViewModels.EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}


<h1>Role</h1>


<form class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" readonly class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" readonly class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Users in this role</label>
        <div class="col-sm-10">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="form-control">@user</h5>
                }
            }
            else
            {
                <h5 class="form-control text-danger">None at the moment</h5>
            }
            <a asp-controller="Administration" asp-action="EditUsersInRole"
               asp-route-roleId="@Model.Id" class="btn btn-primary mb-3" style="width:100%">
                Manage users of this role
            </a>
        </div>
    </div>


</form>